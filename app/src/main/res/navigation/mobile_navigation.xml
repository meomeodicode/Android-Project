<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.instagram.ui.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.instagram.ui.search.SearchFragment"
        android:label=""
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.instagram.ui.add.AddFragment"
        android:label=""
        tools:layout="@layout/fragment_add" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.instagram.ui.notifications.NotificationsFragment"
        android:label=""
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.instagram.ui.profile.ProfileFragment"
        android:label=""
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_searched_user"
        android:name="com.example.instagram.ui.profile.ProfileSearchedFragment"
        android:label=""
        tools:layout="@layout/found_user_profile" />

    <fragment
        android:id="@+id/navigation_post_detail"
        android:name="com.example.instagram.SinglePostDetailFragment"
        android:label=""
        tools:layout="@layout/item_post" />

</navigation>